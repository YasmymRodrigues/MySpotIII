<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_header">

        <SwitchPreferenceCompat
            app:key="darkmode"
            app:summaryOff="@string/darkmode_description_off"
            app:summaryOn="@string/darkmode_description_on"
            app:title="@string/darkmode_title" />

        <SwitchPreferenceCompat
            app:key="shake"
            app:summaryOff="@string/shake_description_off"
            app:summaryOn="@string/shake_description_on"
            app:title="@string/shake_title" />

    </PreferenceCategory>

</PreferenceScreen>